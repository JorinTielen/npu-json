# EditorConfig is awesome: https://editorconfig.org

# top-most EditorConfig file
root = true

# Use UTF-8 with Unix-style newlines and a newline ending every file
[*]
charset = utf-8
end_of_line = lf
insert_final_newline = true

[meson.build]
indent_style = space
indent_size = 2

[Justfile]
indent_style = space
indent_size = 2

[*.sh]
indent_style = space
indent_size = 2

[*.json]
indent_style = space
indent_size = 4

[*.{hpp,cpp}]
indent_style = space
indent_size = 2

[*.py]
indent_style = space
indent_size = 4
